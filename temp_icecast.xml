<icecast>
    <location>AzuraCast</location>
    <admin>icemaster@localhost</admin>
    <hostname>kpurrr.com</hostname>
    <limits>
        <clients>2500</clients>
        <sources>1</sources>
        <queue-size>524288</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>10</source-timeout>
        <burst-size>65535</burst-size>
    </limits>
    <authentication>
        <source-password>KHM9rjKK</source-password>
        <relay-password>YxLfCGYt</relay-password>
        <admin-user>admin</admin-user>
        <admin-password>7mhhDqyJ</admin-password>
    </authentication>
    <listen-socket>
        <port>8005</port>
        <bind-address>127.0.0.1</bind-address>
    </listen-socket>
    <mount type="normal">
        <mount-name>/FreeRadio</mount-name>
        <charset>UTF8</charset>
        <stream-name>kpurrr</stream-name>
        <listenurl>https://kpurrr.com:8000/FreeRadio</listenurl>
        <stream-description>rock</stream-description>
        <stream-url>https://kpurrr.com</stream-url>
        <genre>rock</genre>
        <fallback-mount>/fallback-[256].aac</fallback-mount>
        <fallback-override>1</fallback-override>
        <public>1</public>
    </mount>
    <fileserve>1</fileserve>
    <paths>
        <basedir>/usr/local/share/icecast</basedir>
        <logdir>/var/azuracast/stations/kpurrr/config</logdir>
        <webroot>/usr/local/share/icecast/web</webroot>
        <adminroot>/usr/local/share/icecast/admin</adminroot>
        <pidfile>/var/azuracast/stations/kpurrr/config/icecast.pid</pidfile>
        <alias source="/" dest="/status.xsl"/>
        <ssl-private-key>/var/azuracast/ssl/ssl.key</ssl-private-key>
        <ssl-certificate>/var/azuracast/ssl/kpurr.pem</ssl-certificate>
        <deny-ip>/var/azuracast/stations/kpurrr/config/ip_bans.txt</deny-ip>
        <deny-agents>/var/azuracast/stations/kpurrr/config/user_agent_bans.txt</deny-agents>
        <x-forwarded-for>127.0.0.1</x-forwarded-for>
    </paths>
    <logging>
        <accesslog>icecast_access.log</accesslog>
        <errorlog>/dev/stderr</errorlog>
        <loglevel>3</loglevel>
        <logsize>10000</logsize>
    </logging>
    <security>
        <chroot>0</chroot>
    </security>
</icecast>
